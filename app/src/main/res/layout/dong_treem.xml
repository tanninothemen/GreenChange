<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <LinearLayout
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/imageViewTreEm"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color_vatdung_text"
            android:id="@+id/textViewTenTreEm"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:text="Tên sản phẩm"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:textColor="@color/color_vatdung_textchatlieu"
            android:textStyle="italic"
            android:id="@+id/textViewChatLieuTreEm"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="Chất liệu"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

</LinearLayout>